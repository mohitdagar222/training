<h3><%= link_to "Register", "/signup" %> | <%= link_to "Login", "/" %></h3> 

   <% if @user.errors.any? %>
    <div style="color: red; text-align:center;">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this agent from being saved:</h2>
      <ul style = "list-style-type:none;color:black;">
        <% @user.errors.each do |error| %>
          <li>*<%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<%= form_for @user do |f| %>
    <div id = "form2">
    <h2>Signup Form </h2>
    <label for = "name" class="label">Enter Your Name: </label>
    <%= f.text_field :name %><br><br>

 <%= f.label :password, "Create Your Password:", class: :label %>   
    <%= f.password_field :password %><br><br>

    <%= f.label :password_confirmation, "Confirm Your Password:", class: :label %>   
    <%= f.password_field :password_confirmation %><br><br>

    <%= f.label :dob, "Enter Your DOB:", class: :label %>
    <%= f.date_field :dob %><br><br>

    <%= f.label :address, "Enter Your Address:", class: :label %>
    <%= f.text_area :address, cols: 2, rows: 4 %> <br><br><br>

   <div id = "t"><%= f.check_box :terms_of_services %>
     <%= f.label :terms_of_services, "Accept Terms and Conditions" %>
     </div>
     <br><br>

    
  
    <%= f.submit %>
    </div>
<% end %>